<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/include_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.youth.banner.Banner
                android:id="@+id/good_banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1054"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
            <TextView
                android:id="@+id/good_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize46"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/x45"
                android:layout_marginRight="@dimen/x45"
                android:maxLines="2"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:layout_marginTop="@dimen/x50"
                android:text="峨眉山万弗藤椒油400ml四川特产万弗特麻青花椒调料"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/x45"
                android:layout_marginRight="@dimen/x45"
                android:layout_marginBottom="@dimen/x40"
                android:layout_marginTop="@dimen/x30"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSize40"
                        android:textColor="@color/black"
                        android:text="销："/>
                    <TextView
                        android:id="@+id/good_xiao_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSize40"
                        android:textColor="@color/black"
                        android:text="￥28.00"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x289"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSize40"
                        android:textColor="@color/black"
                        android:text="进："/>
                    <TextView
                        android:id="@+id/good_jin_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSize40"
                        android:textColor="@color/text_price"
                        android:text="￥28.00"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/good_addcart"
                    android:layout_width="@dimen/x317"
                    android:layout_height="@dimen/x81"
                    android:textSize="@dimen/textSize40"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/rect_circle_x40_0f"
                    android:text="加入购物清单"
                    />
            </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x20"
                android:orientation="vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize40"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/x40"
                    android:layout_marginTop="@dimen/x35"
                    android:includeFontPadding="false"
                    android:text="商品参数："/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x2"
                    android:layout_marginTop="@dimen/x35"
                    android:background="@color/text_black_f2"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/x40"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSize35"
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/x40"
                        android:text="品牌名称："/>

                    <TextView
                        android:id="@+id/good_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSize35"
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/x347"
                        android:text="附楼"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/x30"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSize35"
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/x40"
                        android:text="配料表："/>

                    <TextView
                        android:id="@+id/good_peiliao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSize35"
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/x347"
                        android:text="精炼菜籽油 鲜藤椒果"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/x30"
                    android:layout_marginBottom="@dimen/x40"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSize35"
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/x40"
                        android:text="生产许可证编号："/>

                    <TextView
                        android:id="@+id/good_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSize35"
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/x347"
                        android:text="SC1058115451"/>
                </RelativeLayout>
            </LinearLayout>

            <WebView
                android:id="@+id/good_web"
                android:layout_marginTop="@dimen/x20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>