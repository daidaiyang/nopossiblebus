<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/empty"
    android:background="@color/transparent"
    android:layout_marginTop="@dimen/x92"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/empty_img"
        android:layout_width="@dimen/x317"
        android:layout_height="@dimen/y274"
        android:src="@drawable/empty"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/empty_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/x46"
        android:textColor="@color/text_black_99"
        android:textSize="@dimen/textSize35"
        android:includeFontPadding="false"
        android:text="您还没有常购的商品"/>

</LinearLayout>