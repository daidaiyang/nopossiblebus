<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <include layout="@layout/include_title" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y176">

                <TextView
                    android:id="@+id/setworktime_time_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x43"
                    android:text="全天"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/textSize46" />

                <RadioButton
                    android:id="@+id/setworktime_all"
                    android:layout_width="@dimen/x52"
                    android:layout_height="@dimen/y52"
                    android:layout_alignParentEnd="true"
                    android:checked="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x43"
                    android:background="@drawable/selector_checkbox_circle"
                    android:button="@null" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x3"
                android:layout_marginLeft="@dimen/x43"
                android:layout_marginRight="@dimen/x43"
                android:background="@color/text_black_f2"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y176">

                <TextView
                    android:id="@+id/setworktime_time_start"
                    android:layout_width="@dimen/x230"
                    android:layout_height="@dimen/x98"
                    android:gravity="center"
                    android:background="@drawable/rect_circle_x14_f2"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x42"
                    android:textColor="@color/text_black_99"
                    android:textSize="@dimen/textSize46"
                    android:text="07:00"/>

                <View
                    android:layout_width="@dimen/x35"
                    android:layout_height="@dimen/x3"
                    android:background="@color/text_black_99"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x297"/>

                <TextView
                    android:id="@+id/setworktime_time_end"
                    android:layout_width="@dimen/x230"
                    android:layout_height="@dimen/x98"
                    android:gravity="center"
                    android:background="@drawable/rect_circle_x14_f2"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x354"
                    android:textColor="@color/text_black_99"
                    android:textSize="@dimen/textSize46"
                    android:text="23:00"/>

                <RadioButton
                    android:id="@+id/setworktime_time"
                    android:layout_width="@dimen/x52"
                    android:layout_height="@dimen/y52"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x43"
                    android:background="@drawable/selector_checkbox_circle"
                    android:button="@null" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>