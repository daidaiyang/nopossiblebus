<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/empty"
    android:background="@color/background"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/empty_img"
        android:layout_width="@dimen/x317"
        android:layout_height="@dimen/x274"
        android:layout_marginTop="@dimen/y288"
        android:src="@drawable/empty_noaddress"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/empty_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y46"
        android:textSize="@dimen/textSize35"
        android:textColor="@color/text_black_99"
        android:includeFontPadding="false"
        android:text="您还没有添加过任何地址"/>

</LinearLayout>