<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <include layout="@layout/include_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/x259"
            android:layout_height="@dimen/y259"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y154"
            android:src="@drawable/logo"/>

        <EditText
            android:id="@+id/login_username"
            android:layout_width="@dimen/x749"
            android:layout_height="@dimen/y127"
            android:background="@drawable/rect_circle_x63_cc_kuang"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y616"
            android:hint="请输入手机号"
            android:textColorHint="@color/text_black_cc"
            android:paddingLeft="@dimen/x86"
            android:textSize="@dimen/textSize40"
            android:gravity="center_vertical"
            />

        <LinearLayout
            android:layout_width="@dimen/x749"
            android:background="@drawable/rect_circle_x63_cc_kuang"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y801"
            android:layout_height="@dimen/y127">
            <EditText
                android:id="@+id/login_password"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/y127"
                android:background="@null"
                android:hint="请输入密码"
                android:textColorHint="@color/text_black_cc"
                android:paddingLeft="@dimen/x86"
                android:textSize="@dimen/textSize40"
                />
            
            <CheckBox
                android:id="@+id/login_seepassword"
                android:layout_width="@dimen/x53"
                android:layout_height="@dimen/x39"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/x58"
                android:button="@null"
                android:checked="false"
                android:background="@drawable/selector_show_hide"
                />
            
        </LinearLayout>
        <TextView
            android:id="@+id/login_login"
            android:layout_width="@dimen/x749"
            android:layout_height="@dimen/y127"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rect_circle_x63_cc"
            android:layout_marginTop="@dimen/y1014"
            android:text="登录"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/y46"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y1198"
            android:layout_marginLeft="@dimen/x165"
            android:layout_marginRight="@dimen/x165"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/login_regist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快速注册"
                android:textSize="@dimen/textSize35"
                android:textColor="@color/text_black_66"
                />
            <TextView
                android:id="@+id/login_forgetpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/textSize35"
                android:textColor="@color/text_black_66"
                />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>