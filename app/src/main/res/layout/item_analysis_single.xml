<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/single_item_num"
        android:layout_marginTop="@dimen/x35"
        android:layout_width="@dimen/x59"
        android:layout_height="@dimen/x69"
        android:background="@drawable/rect_circle_x14_0f"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x15"
        android:textSize="@dimen/textSize35"
        android:layout_marginLeft="@dimen/x40"
        android:text="1"/>

    <ImageView
        android:id="@+id/single_item_img"
        android:layout_width="@dimen/x184"
        android:layout_height="@dimen/y184"
        android:src="@color/colorPrimary"
        android:layout_marginTop="@dimen/x35"
        android:layout_marginLeft="@dimen/x86"/>

    <TextView
        android:id="@+id/single_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize35"
        android:layout_marginRight="@dimen/x40"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/x307"
        android:layout_marginTop="@dimen/x45"
        android:includeFontPadding="false"
        android:text="克莉娜橄榄油3L家庭装炒菜食用油西班牙原油进口"/>

    <LinearLayout
        android:layout_marginRight="@dimen/x40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x307"
        android:layout_marginTop="@dimen/y160"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize35"
                android:textColor="@color/text_black_66"
                android:includeFontPadding="false"
                android:text="昨日："/>
            <TextView
                android:id="@+id/single_item_yeserday_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize35"
                android:textColor="@color/text_black_0f"
                android:includeFontPadding="false"
                android:text="5325"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize35"
                android:textColor="@color/text_black_66"
                android:includeFontPadding="false"
                android:text="总进货量："/>
            <TextView
                android:id="@+id/single_item_all_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize35"
                android:textColor="@color/text_black_0f"
                android:includeFontPadding="false"
                android:text="5325"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/text_black_f2"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/y255"/>
</RelativeLayout>