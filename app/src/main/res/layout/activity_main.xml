<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y127"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/main_mine"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/x43"
            android:layout_height="match_parent"
            android:src="@drawable/mine"
            android:layout_marginLeft="@dimen/x28"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/main_takeorder"
                android:layout_width="@dimen/x186"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/main_takeorder_check"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:includeFontPadding="false"
                    android:text="接单"/>
                <View
                    android:layout_centerInParent="true"
                    android:id="@+id/main_takeorder_line"
                    android:visibility="invisible"
                    android:layout_width="@dimen/x90"
                    android:layout_height="@dimen/x8"
                    android:background="@drawable/rect_circle_black_line"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/main_ingood"
                android:layout_width="@dimen/x176"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/main_ingood_check"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:includeFontPadding="false"
                    android:text="进货"/>
                <View
                    android:id="@+id/main_ingood_line"
                    android:layout_width="@dimen/x90"
                    android:layout_centerInParent="true"
                    android:layout_height="@dimen/x8"
                    android:background="@drawable/rect_circle_black_line"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/main_togood"
                android:layout_width="@dimen/x176"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/main_togood_check"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:includeFontPadding="false"
                    android:text="供货"/>
                <View
                    android:id="@+id/main_togood_line"
                    android:visibility="invisible"
                    android:layout_width="@dimen/x90"
                    android:layout_centerInParent="true"
                    android:layout_height="@dimen/x8"
                    android:background="@drawable/rect_circle_black_line"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/main_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/x27">
            

            <ImageView
                android:layout_width="@dimen/x46"
                android:layout_height="@dimen/x46"
                android:src="@drawable/message"
                />
            <ImageView
                android:layout_width="@dimen/x14"
                android:layout_height="@dimen/x14"
                android:layout_gravity="right|top"
                android:background="@drawable/circle_point_message"
                />
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>